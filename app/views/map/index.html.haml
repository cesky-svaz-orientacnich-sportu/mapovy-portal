%button.map-show-help{:type => "button", :title => t("mapserver.showSideBar")}
  = image_tag "icons/help.svg", alt: t("mapserver.showSideBar")
= render :partial => 'map_controls'
.map-show-url-link.popupShadow(style="display:none")
  .popup.simple.dialog
    .header
      %span= t("mapserver.urlLinkHeading")
      = link_to image_tag("/img/ico-close.png", :alt => t("mapserver.urlLinkClose")), "javascript:void(0)", id: 'tools_link_close_button', class: 'close'
    .content
      %div
        %input(id="urlInp" type="text" value="" style="border:2px inset; width:215px")
        = link_to t("mapserver.urlLinkUpdate"), "javascript:void(0)", id: 'tools_link_update_button'
.map-show-measure.popupShadow(style="display:none")
  .popup.simple.dialog
    .header
      %span= t("mapserver.measureHeading")
      = link_to image_tag("/img/ico-close.png", :alt => t("mapserver.urlLinkClose")), "javascript:void(0)", id: 'tools_measure_clear_button', class: 'close'
    .content
      #{t("mapserver.measureLength")}:
      %span#span-length 0
      km
      %br
      #{t("mapserver.measureArea")}:
      %span#span-area 0
      kmÂ²
      %br
      = link_to t("mapserver.measureReset"), "javascript:void(0)", id: 'tools_measure_reset_button'

:javascript
  $(function() {
    initMap();
    initMapsLayer();
    initMapComponents();
    initLayout();
    toc.refresh();
  });

= form_for author, :html => {:role => 'form'} do |f|
  .row
    .col-sm-6.col-lg-4
      .form-group
        = f.label :full_name, author_attribute_label(:full_name, :edit)
        = f.text_field :full_name, :class => 'form-control'
  .row
    .col-sm-6.col-lg-4
      .form-group
        = f.label :club, author_attribute_label(:club, :edit)
        = f.text_field :club, :class => 'form-control'
  .row
    .col-xs-6.col-sm-3.col-lg-2
      .form-group
        = f.label :activity, author_attribute_label(:activity, :edit)
        = f.text_field :activity, :class => 'form-control'
    .col-xs-6.col-sm-3.col-lg-2
      .form-group
        = f.label :year_of_birth, author_attribute_label(:year_of_birth, :edit)
        = f.text_field :year_of_birth, :class => 'form-control'
  .row
    .col-sm-6.col-lg-4
      .form-group
        = f.label :note, author_attribute_label(:note, :edit)
        = f.text_field :note, :class => 'form-control'
  .row
    .col-sm-12
      = f.submit 'UloÅ¾it', :class => 'btn btn-primary'

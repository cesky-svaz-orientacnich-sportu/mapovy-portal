.row
  .col-sm-6.col-md-3
    .form-group
      = f.label :created_by_id, map_attribute_label(:created_by)
      %p.form-control-static
        = f.object.created_by ? print_user(f.object.created_by) : "archiv ČSOS"
  .col-xs-7.col-sm-4.col-md-3
    .form-group
      = f.label :id, map_attribute_label(:id_)
      %p.form-control-static
        = f.object.id || '---'
        = " / "
        = f.object.state_
  .col-xs-5.col-sm-3.col-md-2
    .form-group
      = f.label :map_family, map_attribute_label(:map_family)
      %p.form-control-static= f.object.map_family_
  .col-xs-7.col-sm-3.col-md-2
    .form-group
      = f.label :identifier_filing, map_attribute_label(:identifier_filing)
      %p.form-control-static= print_identifier_filing f.object.identifier_filing
  .col-xs-5.col-sm-3.col-md-2
    .form-group
      .checkbox.is-in-sm-grid-form
        = f.label :is_educational do
          = f.check_box :is_educational
          = map_attribute_label(:is_educational)
.row
  .col-sm-8.col-md-3
    .form-group
      = f.label :title, map_attribute_label(:title)
      %p.form-control-static= f.object.title
  .col-xs-3.col-sm-2.col-md-1
    .form-group
      = f.label :patron, map_attribute_label(:patron)
      %p.form-control-static= f.object.patron
  .col-xs-9.col-sm-3.col-md-2
    .form-group
      = f.label :region, map_attribute_label(:region)
      %p.form-control-static= Map::REGIONS[f.object.region]
  .col-xs-12.col-sm-6
    .form-group
      = f.label :locality, map_attribute_label(:locality)
      = f.text_field :locality, :class => 'form-control'
.row
  .col-xs-3.col-sm-2.col-md-1
    .form-group
      = f.label :year, map_attribute_label(:year)
      %p.form-control-static= f.object.year
  .col-xs-4.col-sm-2
    .form-group
      = f.label :blocking_until, map_attribute_label(:blocking_until)
      %p.form-control-static= f.object.blocking_until
  .col-xs-12.col-sm-8.col-md-9
    .form-group
      = f.label :blocking_reason, map_attribute_label(:blocking_reason)
      %p.form-control-static= f.object.blocking_reason
.row
  .col-xs-4.col-sm-2
    .form-group
      = f.label :map_sport, map_attribute_label(:map_sport)
      %p.form-control-static= f.object.map_sport_
  .col-xs-8.col-sm-3
    .form-group
      = f.label :map_type, map_attribute_label(:map_type)
      %p.form-control-static= f.object.map_type_
  .col-xs-4.col-sm-2
    .form-group
      = f.label :scale, map_attribute_label(:scale)
      %p.form-control-static 1:#{f.object.scale}
  .col-xs-4.col-sm-2
    .form-group
      = f.label :equidistance, map_attribute_label(:equidistance)
      %p.form-control-static #{f.object.equidistance} m
.row
  .col-md-9.col-lg-6
    .form-group
      = f.label :oris_event_id, map_attribute_label(:main_race)
      = f.select :oris_event_id, "<option value=\"0\"#{f.object.oris_event_id == 0 ? 'selected' : ''}>(žádný závod)</option>".html_safe + options_from_collection_for_select(f.object.year ? OrisEvent.in_year(f.object.year) : OrisEvent.sorted, :id, :to_label, f.object.oris_event_id), {:include_blank => true}, :class => 'form-control'
  .col-sm-4.col-md-3.col-lg-2
    .form-group
      = f.label :main_race_date, map_attribute_label(:main_race_date)
      = f.text_field :main_race_date, :class => 'form-control', :type => 'date'
  .col-sm-8.col-md-6
    .form-group
      = f.label :main_race_title, map_attribute_label(:main_race_title)
      = f.text_field :main_race_title, :class => 'form-control'
  .col-sm-12.col-md-6
    .form-group
      = f.label :non_oris_event_url, map_attribute_label(:non_oris_event_url)
      = f.url_field :non_oris_event_url, :class => 'form-control'
.row
  .col-xs-6.col-sm-3.col-lg-2
    .form-group
      = f.label :identifier_other, map_attribute_label(:identifier_other)
      = f.text_field :identifier_other, :class => 'form-control'
  .col-xs-6.col-sm-3.col-lg-2
    .form-group
      = f.label :mapping_state, map_attribute_label(:mapping_state)
      = f.text_field :mapping_state, :class => 'form-control'
  .col-xs-5.col-sm-3.col-lg-2
    .form-group
      = f.label :resource, map_attribute_label(:resource)
      = f.text_field :resource, :class => 'form-control'
  .col-xs-7.col-sm-3.col-lg-2
    .form-group
      = f.label :georeference, map_attribute_label(:georeference)
      = f.select :georeference, Map::GEOREFERENCES.map{|x| [t("mapserver.map_enums.georeference.#{x}"), x]}, {:include_blank => true}, :class => 'form-control'
.row
  .col-sm-9.col-md-5.col-lg-6
    .form-group
      = f.label :issued_by, map_attribute_label(:issued_by)
      = f.text_field :issued_by, :class => 'form-control'
  .col-sm-3.col-md-2
    .form-group
      = f.label :printed_by, map_attribute_label(:printed_by)
      = f.text_field :printed_by, :class => 'form-control'
  .col-xs-6.col-sm-6.col-md-2
    .form-group
      = f.label :drawing_technique, map_attribute_label(:drawing_technique)
      = f.select :drawing_technique, Map::DRAWING_TECHNIQUES.map{|x| [t("mapserver.map_enums.drawing_technique.#{x}"), x]}, {:include_blank => true}, :class => 'form-control'
  .col-xs-6.col-sm-6.col-md-3.col-lg-2
    .form-group
      = f.label :printing_technique, map_attribute_label(:printing_technique)
      = f.select :printing_technique, Map::PRINTING_TECHNIQUES.map{|x| [t("mapserver.map_enums.printing_technique.#{x}"), x]}, {:include_blank => true}, :class => 'form-control'


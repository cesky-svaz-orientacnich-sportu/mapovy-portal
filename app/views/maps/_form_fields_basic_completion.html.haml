  .col-sm-6
    .form-group
      = f.label :administrator, map_attribute_label(:administrator)
      = f.text_field :administrator, :class => 'form-control'
  .col-sm-6
    .form-group
      = f.label :administrator_email, map_attribute_label(:administrator_email)
      = f.text_field :administrator_email, :class => 'form-control'

